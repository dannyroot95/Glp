<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.SyncActivity">

    <!-- Contenido principal al centro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:fontFamily="sans-serif-light"
            android:textSize="18dp"
            android:layout_marginBottom="8dp"
            android:text="Conecta tu dispositivo a Internet"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/wificonnect"
            android:id="@+id/btn_qr"
            android:layout_height="200dp"
            android:contentDescription="TODO"/>

    </LinearLayout>

    <!-- Layout inferior con texto y botón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="left"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-light"
            android:textSize="13dp"
            android:gravity="center"
            android:text="¿Tu dispositivo ya tiene Internet?"
            android:layout_height="match_parent"/>

        <Button
            android:layout_width="wrap_content"
            android:text="Escanea el QR"
            android:drawableRight="@drawable/ic_qr_white"
            android:id="@+id/btn_only_qr"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:backgroundTint="#505050"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>
