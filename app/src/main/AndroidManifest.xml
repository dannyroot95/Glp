<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Glp"
        tools:targetApi="31">

        <activity android:name=".Activitys.CaptureActivityPortrait"
            android:screenOrientation="portrait"
            android:theme="@style/zxing_CaptureTheme"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>

        <activity
            android:name=".Activitys.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Activitys.SyncActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Activitys.RegisterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".Activitys.OnBoarding"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.ActivityMenu"
            android:screenOrientation="portrait" />
    </application>

</manifest>